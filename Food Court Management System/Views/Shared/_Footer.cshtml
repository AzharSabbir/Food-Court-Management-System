<style>
    .footer {
        background-color: #737373;
        color: #fff;
        padding: 40px 20px 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%; /* ✅ Full viewport width */
        box-sizing: border-box;
        font-family: Arial, sans-serif;
        position: relative; /* ensure it layers naturally */
        left: 0;
        margin: 0;
    }

    html, body {
        height: 100%;
        margin: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container.body-content {
        flex: 1 0 auto;
    }

    .footer .flex {
        display: flex;
        width: 100%;
        max-width: 1200px;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 30px;
    }

    .footer aside, .footer nav {
        flex: 1;
        min-width: 200px;
    }

        .footer aside:first-child p {
            color: #fff;
            font-size: 1em;
            line-height: 1.5;
            margin-top: 10px;
        }

    .footer .footer-title {
        font-size: 1.1em;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .footer ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .footer ul li {
            margin-bottom: 8px;
        }

            .footer ul li a {
                color: #ddd;
                text-decoration: none;
            }

                .footer ul li a:hover {
                    color: #fff;
                }

    .footer hr {
        width: 100%;
        border: 0;
        border-top: 1px solid #ccc;
        margin: 20px 0;
    }

    .footer .copyright {
        color: #ddd;
        font-size: 0.9em;
        text-align: center;
        margin-top: 10px;
    }
</style>


<footer class="footer">
    <div class="flex">
        <aside>
            <a href="@Url.Content("~/")">
                <img src="@Url.Content("~/Assets/images/site-logo.png")"
                     alt="Logo"
                     width="200"
                     height="170"
                     class="cursor-pointer" />
            </a>
        </aside>
        <nav>
            <h6 class="footer-title">Products</h6>
            <ul>
                <li><a href="@Url.Content("#")">All Products</a></li>
                <li><a href="@Url.Content("#")">Trending Products</a></li>
                <li><a href="@Url.Content("#")">Categories</a></li>
            </ul>
        </nav>
        <nav>
            <h6 class="footer-title">Category</h6>
            <ul>
                <li><a href="@Url.Content("#")">3D Model</a></li>
                <li><a href="@Url.Content("#")">Graphics Template</a></li>
                <li><a href="@Url.Content("#")">E-Book</a></li>
                <li><a href="@Url.Content("#")">Presentation Slide</a></li>
            </ul>
        </nav>
        <nav>
            <h6 class="footer-title">Company</h6>
            <ul>
                <li><a href="@Url.Content("#")">About Us</a></li>
                <li><a href="@Url.Content("#")">Privacy policy</a></li>
                <li><a href="@Url.Content("#")">Terms of use</a></li>
                <li><a href="@Url.Content("#")">Contact Us</a></li>
            </ul>
        </nav>
    </div>
    <hr />
    <aside>
        <p>Copyright © @DateTime.Now.Year - All right reserved by Dine Avenue</p>
    </aside>

</footer>