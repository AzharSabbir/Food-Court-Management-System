@model Food_Court_Management_System.Models.Custom.CustomerModel
@{
    ViewBag.Title = "Customer Profile";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f8;
            font-family: 'Segoe UI', sans-serif;
        }

        .profile-card {
            max-width: 800px;
            margin: 3rem auto;
            background-color: #fff;
            border-radius: 1rem;
            box-shadow: 0 8px 24px rgba(0,0,0,0.1);
            padding: 2rem;
        }

        .avatar {
            width: 160px;
            height: 160px;
            object-fit: cover;
            border-radius: 50%;
            border: 5px solid #e9ecef;
        }

        .info-title {
            font-weight: 600;
            color: #495057;
        }

        .info-value {
            font-size: 1.1rem;
            color: #212529;
        }

        .wallet-box {
            background-color: #e3f2fd;
            padding: 1rem;
            border-radius: 0.5rem;
            text-align: center;
        }

        .wallet-balance {
            font-size: 1.5rem;
            font-weight: bold;
            color: #0d6efd;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="profile-card text-center">
            <img src="~/assets/images/avatar.jpg" alt="Customer Avatar" class="avatar mb-3" />
            <h3 class="fw-bold text-primary">@Model.Name</h3>
            <p class="text-muted mb-3">@Model.Username</p>

            <div class="wallet-box mb-4">
                <div class="text-muted small">Wallet Balance</div>
                <div class="wallet-balance">৳ @Model.Balance.ToString("N2")</div>
            </div>

            <div class="row text-start">
                <div class="col-md-6 mb-3">
                    <div class="info-title">Email</div>
                    <div class="info-value">@Model.Email</div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="info-title">Phone</div>
                    <div class="info-value">@Model.Phone</div>
                </div>
                <div class="col-12">
                    <div class="info-title">Address</div>
                    <div class="info-value">@Model.Address</div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
