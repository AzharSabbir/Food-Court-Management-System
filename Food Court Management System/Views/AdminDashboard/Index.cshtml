@model Food_Court_Management_System.Models.Custom.AdminDashboardViewModel

@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f4f4;
        }

        .sidebar {
            height: 100vh;
            background-color: #5b2c91;
            padding-top: 1.5rem;
            position: fixed;
            color: white;
            width: 200px;
        }

            .sidebar a {
                color: white;
                display: block;
                padding: 10px 15px;
                text-decoration: none;
            }

                .sidebar a:hover, .sidebar .active {
                    background-color: #472178;
                }

        .main-content {
            margin-left: 200px;
            padding: 2rem;
        }

        .card-box {
            background-color: white;
            padding: 1rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 8px rgba(0,0,0,0.05);
            text-align: center;
        }

        .recent-table th {
            background-color: #5b2c91;
            color: white;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h5 class="text-center mb-4">Food Court</h5>
        <a class="active" href="#">Dashboard</a>
        <a href="@Url.Action("Restaurants", "AdminDashboard")">Restaurants</a>
        <a href="@Url.Action("Users", "AdminDashboard")">Users</a>
        <a href="#">Employees</a>
        <a href="#">Transactions</a>
        <a href="#">Coupons</a>
        <a href="#">Settings</a>
    </div>

    <!-- Main -->
    <div class="main-content">
        <div class="top-bar">
            <h3>Admin Dashboard</h3>
            <div>
                <span>Welcome, Admin</span>
                <a href="@Url.Action("Logout", "Auth")" class="btn btn-sm btn-outline-dark ms-2">Logout</a>
            </div>
        </div>

        <!-- Stats -->
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="card-box">
                    <h6>Total Restaurants</h6>
                    <h4>@Model.TotalRestaurants</h4>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card-box">
                    <h6>Total Users</h6>
                    <h4>@Model.TotalUsers</h4>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card-box">
                    <h6>Total Orders</h6>
                    <h4>@Model.TotalOrders</h4>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card-box">
                    <h6>Total Transactions</h6>
                    <h4>$@Model.TotalTransactions</h4>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card-box">
                    <h6>Total Employees</h6>
                    <h4>@Model.TotalEmployees</h4>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="card p-3">
            <h5>Recent Restaurants</h5>
            <table class="table table-bordered mt-3 recent-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.RecentRestaurants)
                    {
                        <tr>
                            <td>@r.Name</td>
                            <td>@r.Email</td>
                            <td>@r.Phone</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
