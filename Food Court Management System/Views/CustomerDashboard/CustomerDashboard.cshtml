@model Food_Court_Management_System.Controllers.CustomerDashboardViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Dashboard</title>
    <link rel="stylesheet" href="~/Content/CSS/CustomerDashboard.css" />
</head>
<body>
    <div class="dashboard-container">
        <div class="sidebar">
            <div class="logo">
                <h2>Food Court</h2>
            </div>
            <ul class="nav-list">
                <li><a href="#">Dashboard</a></li>
                <li><a href="#">Orders</a></li>
                <li><a href="#">Wallet</a></li>
                <li><a href="#">Transactions</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="#">Coupons</a></li>
                <li><a href="#">Settings</a></li>
            </ul>
        </div>

        <div class="main-content">
            <div class="header">
                <h1>Customer Dashboard</h1>
                <div class="user-info">
                    <span>Welcome, @Model.CustomerName</span>
                    <button class="logout-btn">Logout</button>
                </div>
            </div>

            <div class="overview">
                <div class="card">
                    <h3>Wallet Balance</h3>
                    <p>$@Model.WalletBalance</p>
                </div>
                <div class="card">
                    <h3>Active Orders</h3>
                    <p>@Model.ActiveOrders</p>
                </div>
                <div class="card">
                    <h3>Available Coupons</h3>
                    <p>@Model.AvailableCoupons</p>
                </div>
            </div>

            <div class="order-history">
                <h2>Order History</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Restaurant</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.OrderHistory)
                        {
                            <tr>
                                <td>@order.OrderID</td>
                                <td>@order.Restaurant</td>
                                <td>$@order.Amount</td>
                                <td>@order.Status</td>
                                <td>@order.Time</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
